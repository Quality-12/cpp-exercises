#include <iostream>
#include <vector>
#include <string>
using namespace std;

// Class for Book
class Book {
public:
    string title;
    string author;
    bool isBorrowed;

    Book(string t, string a) {
        title = t;
        author = a;
        isBorrowed = false;
    }
};

// Class for User
class User {
public:
    string name;

    User(string n) {
        name = n;
    }
};

// Class for Library
class Library {
public:
    vector<Book> books;

    // Add a book
    void addBook(string title, string author) {
        books.push_back(Book(title, author));
        cout << "Book added: " << title << " by " << author << endl;
    }

    // Search for a book
    void searchBook(string title) {
        for (Book& b : books) {
            if (b.title == title) {
                cout << "Found: " << b.title << " by " << b.author;
                cout << (b.isBorrowed ? " (Borrowed)" : " (Available)") << endl;
                return;
            }
        }
        cout << "Book not found." << endl;
    }

    // Borrow a book
    void borrowBook(string title) {
        for (Book& b : books) {
            if (b.title == title && !b.isBorrowed) {
                b.isBorrowed = true;
                cout << "You borrowed: " << b.title << endl;
                return;
            }
        }
        cout << "Book is not available." << endl;
    }

    // Return a book
    void returnBook(string title) {
        for (Book& b : books) {
            if (b.title == title && b.isBorrowed) {
                b.isBorrowed = false;
                cout << "You returned: " << b.title << endl;
                return;
            }
        }
        cout << "Book was not borrowed or doesn't exist." << endl;
    }
};

// Main program
int main() {
    Library lib;
    int choice;
    string title, author;

    cout << "ðŸ“š Welcome to the Library System ðŸ“š\n";

    do {
        cout << "\nMenu:\n";
        cout << "1. Add Book\n";
        cout << "2. Search Book\n";
        cout << "3. Borrow Book\n";
        cout << "4. Return Book\n";
        cout << "5. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;
        cin.ignore(); // clear newline

        switch (choice) {
            case 1:
                cout << "Enter book title: ";
                getline(cin, title);
                cout << "Enter book author: ";
                getline(cin, author);
                lib.addBook(title, author);
                break;
            case 2:
                cout << "Enter title to search: ";
                getline(cin, title);
                lib.searchBook(title);
                break;
            case 3:
                cout << "Enter title to borrow: ";
                getline(cin, title);
                lib.borrowBook(title);
                break;
            case 4:
                cout << "Enter title to return: ";
                getline(cin, title);
                lib.returnBook(title);
                break;
            case 5:
                cout << "Thank you for using the Library System!" << endl;
                break;
            default:
                cout << "Invalid choice. Try again." << endl;
        }

    } while (choice != 5);

    return 0;
}
